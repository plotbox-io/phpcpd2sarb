{
    "name": "supportpal/phpcpd2sarb",
    "description": "A tool to convert phpmd-phpcpd XML to sarb format.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kieran Brahney",
            "email": "kieran@supportpal.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-simplexml": "*",
        "symfony/console": ">=4.4"
    },
    "autoload": {
        "psr-4": { "SupportPal\\Phpcpd2Sarb\\": "src" }
    },
    "bin": ["phpcpd2sarb"],
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": ">=9.6",
        "supportpal/coding-standard": "^0.4.4"
    },
    "config": {
        "preferred-install": "dist",
        "platform": {
            "php": "8.1"
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
